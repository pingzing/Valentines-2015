<mvvm:BindableWindowBase x:Class="Valentines2015.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mvvm="clr-namespace:Valentines2015.MVVM"
        Title="Music Box"
        Background="Black"
        Height="370" Width="500">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="OpenMenuItem" Header="_Open" Click="OpenMenuItem_Click"/>
        </Menu>
        <Grid DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="MainTextBlock"
                       Grid.Row="0"
                   Margin="0 0 0 20"
                   TextWrapping="NoWrap"                    
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center" 
                   FontFamily="Consolas" 
                   Foreground="Red" 
                   TextAlignment="Center"/>
        </Grid>
    </DockPanel>
</mvvm:BindableWindowBase>
