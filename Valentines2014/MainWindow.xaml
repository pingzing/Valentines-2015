<Window x:Class="Valentines2014.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainPage"
        Background="Black"
        Height="350" Width="500">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="OpenMenuItem" Header="_Open" Click="OpenMenuItem_Click"/>             
        </Menu>
    <Grid DockPanel.Dock="Bottom">
        <TextBlock x:Name="MainTextBlock" TextWrapping="NoWrap" Text="" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontFamily="Consolas" Foreground="Red" TextAlignment="Center"/>        
    </Grid>
    </DockPanel>
</Window>
